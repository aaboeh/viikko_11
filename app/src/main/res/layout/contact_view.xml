<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="10dp"
    android:background="#D1C7C7"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ContactImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ContactNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nimi"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ContactNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puhelinnumero"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ContactGroupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RyhmÃ¤"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/ContactDetailsButton"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#03A9F4"
        android:clickable="true"
        app:cornerRadius="0dp"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconSize="20dp" />

    <Button
        android:id="@+id/ContactDeleteButton"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F30606"
        android:clickable="true"
        app:cornerRadius="0dp"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconSize="20dp" />

</LinearLayout>